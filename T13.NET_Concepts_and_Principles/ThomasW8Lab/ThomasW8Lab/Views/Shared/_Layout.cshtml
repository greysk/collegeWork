<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/custom.css" />
</head>
<body>
    <a class="skip" href="#content">Skip to Contact</a>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index" asp-controller="Home" href="/Home/Index">
            <i class="bi-person"></i>
            GTapp
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navToggler">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-link">
                    <a class="nav-link" asp-action="Index" asp-controller="Home" href="/Home/Index">Home</a>
                </li>
                <li class="nav-link">
                    <a class="nav-link" asp-action="About" asp-controller="Home" href="/Home/About">About</a>
                </li>
                <li class="nav-link">
                    <a class="nav-link" asp-action="Contact" asp-controller="Home" href="/Home/Contact">Contact</a>
                </li>
                <li class="nav-link">
                    <a class="nav-link" asp-action="Links" asp-controller="Home" href="/Home/Links">Links</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <header id="header">

        </header>

        <div id="content">
            @RenderBody()
        </div>

        <footer id="footer">
            <p>By Graeson Thomas</p>
            <p>For Grantham University's IS370</p>
        </footer>

    </div> <!-- .container -->
</body>
</html>
